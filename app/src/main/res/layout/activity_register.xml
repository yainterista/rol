<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.roll.git.register">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center_vertical"
            android:paddingLeft="135dp"
            android:shadowRadius="5.5"
            android:text="Register"
            android:textSize="33sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/tvdisRE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="displayname"
            android:textSize="20dp"
            android:textColor="@android:color/darker_gray"/>


        <EditText
            android:id="@+id/tvusernameRE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Username"
            android:textSize="20dp"
            android:textColor="@android:color/darker_gray"/>

        <EditText
            android:id="@+id/tvpasswirdRE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Password"
            android:textSize="20dp"
            android:textColor="@android:color/darker_gray"/>

        <EditText
            android:id="@+id/tvconpasswordRE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Password confirm"
            android:textSize="20dp"
            android:textColor="@android:color/darker_gray"/>



        <Button
            android:id="@+id/btnpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="REGISTER"
            android:textSize="15sp" />




    </LinearLayout>
</RelativeLayout>
